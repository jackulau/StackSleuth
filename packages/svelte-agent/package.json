{
  "name": "@stacksleuth/svelte-agent",
  "version": "0.2.4",
  "description": "Specialized Svelte performance monitoring agent - Component lifecycle tracking, store subscription monitoring, reactive state analysis, DOM mutation observation, and real-time memory profiling.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "src/",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ci": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "benchmark": "node benchmarks/performance.js",
    "performance:test": "clinic doctor -- node benchmarks/memory-test.js"
  },
  "keywords": [
    "performance",
    "monitoring",
    "profiling",
    "stacksleuth",
    "observability",
    "analytics",
    "optimization",
    "instrumentation",
    "apm",
    "real-time",
    "svelte",
    "sveltekit",
    "components"
  ],
  "dependencies": {
    "@stacksleuth/core": "^0.2.1",
    "nodemailer": "7.0.12",
    "puppeteer": "24.34.0",
    "svelte": ">=3.0.0",
    "vite": "7.3.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "eslint": "^8.0.0",
    "jsdom": "^23.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "svelte": ">=3.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jackulau/StackSleuth.git",
    "directory": "packages/svelte-agent"
  },
  "license": "MIT",
  "author": {
    "name": "StackSleuth Team",
    "email": "team@stacksleuth.com",
    "url": "https://github.com/jackulau/StackSleuth"
  },
  "homepage": "https://github.com/jackulau/StackSleuth/tree/main/packages/svelte-agent#readme",
  "bugs": {
    "url": "https://github.com/jackulau/StackSleuth/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
